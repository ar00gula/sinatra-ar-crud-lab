<form action="/articles/<%=params[:id]%>" method="post">
<p>Title: <input type="text" name="title" value="<%= Article.find(params[:id]).title %>"></p>
<p>Content: <input type="text" name="content" value="<%= Article.find(params[:id]).content %>"></p>
<input type="submit" value="Submit">
<input id="hidden" type="hidden" name="_method" value="PATCH">
</form>